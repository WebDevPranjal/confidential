<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Invoices</title>
    <link rel="stylesheet" href="/stylesheets/basic.css">
    <link rel="stylesheet" href="/stylesheets/common.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>        
        .invoice {
            box-sizing: border-box;
            padding: 1em;
            width: 100%;
        }

        .invoice table {
            width: 100%;
            border-spacing: 0 1em;
            margin-top: 1rem;
        }

        .invoice th, .invoice td {
            padding: 1em;
            text-align: left;
            text-transform: capitalize;
        }

        .invoice th {
            background-color: var(--secondary-color);
            color: white;
        }

        tbody tr {
            box-shadow: var(--box-shadow);
        }

        .invoice a {
            background-color: var(--primary-color);
            color: white;
            padding: .6em;
            font-weight: 600;
            text-decoration: none;
        }

        .delete {
            padding: .7rem;
            background: #d50000;
            color: white;
            font-weight: 600;
            border: none;
        }
    </style>
</head>
<body>

    <%- include('../common/side-menu.ejs') %>
    <section class="home-section">
        <nav class="navbar">
            <i class="fa-solid fa-bars"></i>
            <%- include('../common/navbar.ejs') %>
        </nav>
        
        <p class="page-details"><%= header %></p>

        <section class="body">
            <div class="invoice">
                <table>
                    <thead>
                        <tr>
                            <th onclick="sortTable(0)">Invoice Number</th>
                            <th onclick="sortTable(1)">Customer Name</th>
                            <th onclick="sortTable(2)">Date</th>
                            <th onclick="sortTable(3)">Type</th>
                            <th>Get PDF</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% invoices.forEach((invoice) => { %>
                            <tr>
                                <td><%= invoice.invoiceNumber %></td>
                                <td><%= invoice.customerName %></td>
                                <td><%= new Date(invoice.date).toLocaleString('en-US', { month: 'long', day: 'numeric', year: 'numeric' }) %></td>
                                <td><%= invoice.type %></td>
                                <td><a href="/invoices/<%=invoice._id%>">Get Pdf</a></td>
                                <td><button class="delete" onclick="deleteInvoice('<%=invoice._id%>')">Delete</button></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </section>
    </section>
  
</body>
<script src="/scripts/invoice-list.js"></script>
<script src="/scripts/sort-table.js"></script>
<script src="/scripts/side-menu.js"></script>
</html>
