<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheets/basic.css">
  <link rel="stylesheet" href="/stylesheets/common.css">
  <link rel="stylesheet" href="/stylesheets/invoice.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body>

  <%- include('../common/side-menu.ejs') %>
  <section class="home-section">
    <nav class="navbar">
      <i class="fa-solid fa-bars"></i>
      <%- include('../common/navbar.ejs') %>
    </nav>

    <p class="page-details"><%= header %></p>

    <section class="body">
      <div class="container">
        <div class="flex">
          <div class="input-container">
            <label for="invoice-type">Invoice Type</label>
            <input type="text" id="invoice-type" value="sales" readonly>
          </div>

          <div class="input-container">
            <label for="invoice-number">Invoice Number</label>
            <% if(existingInvoice) { %>
              <input type="text" name="invoice-number" id="invoice-number" value="<%= existingInvoice.invoiceNumber %>">
            <% } else { %>
              <input type="text" name="invoice-number" id="invoice-number" value="New Invoice Number">
            <% } %>
          </div>
          
                 
    
        </div>
    
        <div class="flex">
          <div class="input-container">
            <label for="customer-name">Customer Name</label>
            <select id="customer-name">
              <option value="">---Select Customer---</option>
              <% customers.forEach(customer => { %>
              <option value="<%= customer.name %>">
                <%= customer.name %>
              </option>
              <% }); %>
            </select>
          </div>

          <div class="input-container">
            <label for="invoice-date">Invoice Date</label>
            <input type="date" name="invoice-date" id="invoice-date">
          </div>
    
        </div>
      </div>
    
      <div class="container">
        <div class="flex">
          <div class="input-container">
            <label for="product">Select Product:</label>
            <select id="product">
              <option value="">---Select Product---</option>
              <% products.forEach(product => { %>
              <option value="<%= product.name %>">
                <%= product.name %>
              </option>
              <% }); %>
            </select>
          </div>

          <div class="input-container">
            <label for="selected-batch">Selected Batch:</label>
            <input type="text" onclick="showBatchDetails(<%= JSON.stringify(products) %>)" 
                      id="selected-batch" readonly value="">
          </div>
    
        </div>
        <div class="flex">
          <div class="input-container">
            <label for="product-mrp">Product MRP:</label>
            <input type="Number" id="product-mrp" value="" name="mrp" placeholder="MRP">
          </div>

          <div class="input-container">
            <label for="product-date">Product Expire Date:</label>
            <input type="date" id="product-date" value="" name="expireDate">
          </div>
    
        </div>
    
        <div class="flex">
          <div class="input-container">
            <label for="salerate">Product Sales Rate:</label>
            <input type="Number" id="salerate" value="" name="salerate" placeholder="Rate">
          </div>

          <div class="input-container">
            <label for="quantity">Product Quantity:</label>
            <input type="Number" placeholder="Quantity" name="quantity">
          </div>
        </div>
    
        <div class="flex">
          <div class="input-container">
            <label for="discount">Product Discount:</label>
            <input type="Number" placeholder="Discount" name="discount">
          </div>

          <div class="input-container">
            <label for="free">Product Free:</label>
            <input type="Number" placeholder="Free" name="free">
          </div>    
        </div>
    
        <div class="flex">
          <button onclick="addToTable()">Add to Table</button>
        </div>   
      </div>
    
      <table id="productTable">
        <thead>
          <tr>
            <th>Product</th>
            <th>Batch</th>
            <th>Expire Date</th>
            <th>MRP</th>
            <th>Sale's Rate</th>
            <th>Quantity</th>
            <th>Free</th>
            <th>Discount</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody id="tableBody"></tbody>
      </table>
      <button class="generate-btn" onclick="invoiceData()">Generate Bill</button>
     
      <div class="overlay" id="overlay"></div>
      <div class="batch-details" id="batchDetails">
        <h2 id="batchProductName"></h2>
        <table id="batchList">
          <thead>
            <tr>
              <th>Batch</th>
              <th>Quantity</th>
              <th>Exipre Date</th>
              <th>Packaging</th>
              <th>MRP</th>
            </tr>
          </thead>
          <tbody id="tbody-batch">
          </tbody>
        </table>
        <button onclick="closeBatchDetails()">Close</button>
      </div>
    </section>
  </section>
  
<script src="/scripts/invoice-sales.js"></script>
<script src="/scripts/side-menu.js"></script>
</body>
</html>
